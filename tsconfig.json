{
  "compilerOptions": {
    "allowJs": true,
    "charset": "utf8",
    "checkJs": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./cjs",
    "removeComments": true,
    "esModuleInterop": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "files": ["src/component/index.ts", "src/component/metadata.ts"]
}
